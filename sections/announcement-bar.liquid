<div class="announcement-bar">
  <div class="content">
    <span>{{ section.settings.txt1 }}</span>
    <span class="space">&nbsp;&nbsp;&nbsp;</span>
    
    <span class="space">&nbsp;&nbsp;&nbsp;</span>
    <span>{{ section.settings.txt2 }}</span>
    <span class="space">&nbsp;&nbsp;&nbsp;</span>
    
    <span class="space">&nbsp;&nbsp;&nbsp;</span>
    <span>{{ section.settings.txt3 }}</span>
  </div>
</div>

<style>
  .announcement-bar {
    width: 100%;
    overflow: hidden;
    background-color: {{ section.settings.bgcolor }};
    color: {{ section.settings.txtcolor }};
    padding: 10px 0;
    white-space: nowrap;
    box-sizing: border-box;
  }

  .content {
    display: inline-block;
    white-space: nowrap;
    font-size: {{ section.settings.marqueefontsize }}px;
    animation: marquee {{ section.settings.marqueefontspeed }}s linear infinite;
  }

  @keyframes marquee {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(-100%);
    }
  }

  .space {
    display: inline-block;
    width: 140px;
  }
</style>

