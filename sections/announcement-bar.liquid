{
  "name": "moving banner",
  "settings": [
    {
      "id": "txt1",
      "label": "Running Text 1",
      "type": "text",
      "default": "End of Season Sale is Now Live."
    },
    {
      "id": "txt2",
      "label": "Running Text 2",
      "type": "text",
      "default": "Enjoy up to 50% Off."
    },
    {
      "id": "txt3",
      "label": "Running Text 3",
      "type": "text",
      "default": "Free delivery over â‚¹500."
    },
    {
      "id": "bgcolor",
      "type": "color",
